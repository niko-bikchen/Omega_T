<% include common_views/header.ejs %>

    <div class="container" id="main_page_contents">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                        <div class="col-md-12" id="company_name">OPsi</div>
                    <div class="col-md-12" id="logo"><img src="assets/images/logo.png" alt="Company logo"></div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row" id="search_bar">
                    <span id="from" class="col-md-12">
                        <span class="row">
                            <span class="col-md-1" id="from_label">From: </span>
                            <span class="col-md-5" id="from_planet">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroup-sizing-default">Planet</span>
                                    </div>
                                    <input type="text" id="from_p" class="form-control" aria-label="Sizing example input"
                                        aria-describedby="inputGroup-sizing-default" placeholder="Planet name">
                                </div>
                            </span>
                            <span class="col-md-6" id="from_starport">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroup-sizing-default">Starport</span>
                                    </div>
                                    <input type="text" id="from_s" class="form-control" aria-label="Sizing example input"
                                        aria-describedby="inputGroup-sizing-default" placeholder="Starport name">
                                </div>
                            </span>
                        </span>
                    </span>
                    <span id="to" class="col-md-12">
                        <span class="row">
                            <span class="col-md-1" id="to_label">To: </span>
                            <span class="col-md-5" id="to_planet">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroup-sizing-default">Planet</span>
                                    </div>
                                    <input type="text" id="to_p" class="form-control" aria-label="Sizing example input"
                                        aria-describedby="inputGroup-sizing-default" placeholder="Planet name">
                                </div>
                            </span>
                            <span class="col-md-6" id="to_starport">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroup-sizing-default">Starport</span>
                                    </div>
                                    <input type="text" id="to_s" class="form-control" aria-label="Sizing example input"
                                        aria-describedby="inputGroup-sizing-default" placeholder="Starport name">
                                </div>
                            </span>
                        </span>
                    </span>
                    <div class="col-md-12" id="utils">
                        <div class="row">
                            <span class="col-md-6 swap"><button class="btn btn-primary btn-block" id="swap_btn">Swap</button></span>
                            <span class="col-md-6 clear"><button class="btn btn-primary btn-block" id="clear_btn">Clear</button></span>
                        </div>
                    </div>
                    <span id="error_message" class="col-md-12">
                        <span id="message"></span>
                    </span>
                    <span id="date_container" class="col-md-12">
                        <span>Pick a date: </span>
                        <br>
                        <input id="date" type="date" required="required" />
                    </span>
                    <span class="col-md-12">
                        <button id="search_btn" class="btn">Search</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div id="flights_container" class="container">
        <div class="row">
            <div class="col-md-12" id="flights">
                <div id="no_flights_label">
                    <p>
                        <span>Sorry.</span>
                        <br> 
                        We couldn't find any flights for the destenitations you have just specified.
                        <br>
                        They are absent for now, but may appear later.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div>
    <div>
    </div>
    <div id="footer_container" class="container-fluid">
        <div class="row">
            <div id="footer" class="col-md-12">
